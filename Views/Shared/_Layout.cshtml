<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Транспортная компания</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Транспортная компания</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cars" asp-action="Index">Автомобили</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employees" asp-action="Index">Сотрудники</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cargos" asp-action="Index">Грузы</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trips" asp-action="Index">Рейсы</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

</body>
</html>
